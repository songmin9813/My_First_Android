<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item android:state_pressed="true">
        <!-- 눌렸을 때 실행-->
        <shape><!-- 모양의 형태를 설정-->
            <solid android:color="#ff0000">
                <!-- 해당 아이템의 색 설정-->
            </solid>
            <corners android:radius="20dp">
                <!-- 해당 아이템의 둥그런 코너 설정-->
            </corners>
        </shape>
    </item>
    <item android:state_enabled="true">
        <!-- 온전한 아이템으로 나왔을 때 실행-->
        <shape><!-- 모양의 형태를 설정-->
            <solid android:color="#00b2ed">
                <!-- 해당 아이템의 색 설정-->
            </solid>
            <corners android:radius="20dp">
                <!-- 해당 아이템의 둥그런 코너 설정-->
            </corners>
        </shape>
    </item>
    <item android:state_enabled="false">
        <!-- 온전한 아이템으로 나왔을 때 실행-->
        <shape><!-- 모양의 형태를 설정-->
            <solid android:color="#8696a5">
                <!-- 해당 아이템의 색 설정-->
            </solid>
            <corners android:radius="20dp">
                <!-- 해당 아이템의 둥그런 코너 설정-->
            </corners>
        </shape>
    </item>


</selector>